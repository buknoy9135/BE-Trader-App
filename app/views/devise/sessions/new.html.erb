<div class="d-flex align-items-center justify-content-center min-vh-100">
  <div class="w-100" style="max-width: 350px;">
    <h2 class="mb-4 text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card p-4 shadow-sm", style: "width: 100%;" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
          <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
