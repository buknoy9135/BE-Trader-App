<style>
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  .navbar {
    height: 56px; /* smaller height */
  }

  .main-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f8f9fa;
    text-align: center;
    padding: 2rem;
  }

  .footer {
    height: 50px;
    background: #e9ecef;
    text-align: center;
    padding: 1rem;
    font-size: 0.875rem;
  }
</style>

<!-- Navbar -->
<nav class="navbar navbar-light bg-light border-bottom shadow-sm">
  <div class="container d-flex justify-content-between align-items-center">
    <a class="navbar-brand fw-bold text-primary mb-0" href="#">Broker Joke</a>

    <div class="dropdown">
      <a
        class="nav-link dropdown-toggle text-dark"
        href="#"
        id="navbarDropdown"
        role="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        Sign In
      </a>
      <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="navbarDropdown">
        <li><%= link_to 'Admin', new_user_session_path(role: 'admin'), class: "dropdown-item" %></li>
        <li><%= link_to 'Trader', new_user_session_path(role: 'trader'), class: "dropdown-item" %></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<div class="main-content">
  <div style="max-width: 600px;">
    <h1 class="display-5 fw-bold mb-3 text-dark">
      Welcome to <span class="text-primary">Broker Joke</span>
    </h1>
    <p class="lead text-muted mb-4">
      Where every trade might be a jokeâ€”or your best move ever.
    </p>
    <%= link_to 'Apply as Trader', new_user_registration_path, class: 'btn btn-success btn-lg px-4 shadow-sm' %>
  </div>
</div>

<!-- Footer -->
<footer class="footer">
  &copy; <%= Time.current.year %> Broker Joke Trading Platform
</footer>
