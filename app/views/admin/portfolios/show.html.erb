<div class="d-flex justify-content-center">
  <div class="card border border-1 border-secondary-subtle shadow-sm rounded-4 mb-4" style="min-width: 400px; background-color: #fdfdfd; max-height: 90vh; overflow: hidden;">
    
    <div class="position-absolute top-0 end-0 m-2">
      <%= link_to admin_users_path, class: "btn btn-light shadow-sm border-1 border-secondary-subtle" do %>
        <i class="bi bi-backspace-fill fs-5 text-secondary"></i>
      <% end %>
    </div>

    <div class="card-body p-4 mt-5">
      <h4 class="mb-2 text-primary fw-bold text-center">Portfolio of <%= "#{@trader.first_name} #{@trader.last_name}" %></h4>

      <dl class="row small mb-0">
        <div style="max-height: 50vh; overflow-y: auto;">
          <table class="table table-hover text-center align-middle">
            <thead class="table-dark sticky-top">
              <tr>
                <th>Asset Symbol</th>
                <th>Quantity</th>
              </tr>
            </thead>
            <tbody>
              <% if @holdings.present? %>
                <% @holdings.each do |symbol, quantity| %>
                  <tr>
                    <td><%= symbol %></td>
                    <td><%= quantity %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="2" class="text-muted">No data found.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </dl>
    </div>
  </div>
</div>
