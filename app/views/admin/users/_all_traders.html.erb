<h5 class="mb-2 text-primary"><%= current_user.super_admin? ? "All Users" : "All Traders" %></h5>
<%= search_form_for @q, url: admin_users_path, method: :get, html: { class: "mb-2" } do |f| %>
  <div class="row gx-2 gy-2 align-items-end">

    <div class="col-sm-4 col-md-3 col-lg-2">
      <%= f.search_field :first_name_or_last_name_cont, class: "form-control form-control-sm", placeholder: "e.g. Juan Dela Cruz" %>
    </div>

    <div class="col-sm-4 col-md-3 col-lg-2">
      <%= f.select :status_eq,
          User.statuses.map { |k, _| [k.titleize, k] },
          { include_blank: "all" },
          class: "form-select form-select-sm" %>
    </div>

    <div class="col-sm-4 col-md-3 col-lg-2 d-flex gap-1">
      <%= f.submit "Search", class: "btn btn-sm btn-primary w-100" %>
      <%= link_to "Clear", admin_users_path, class: "btn btn-sm btn-outline-secondary w-100" %>
    </div>

  </div>
<% end %>

<table class="table table-sm table-bordered border-secondary table-hover text-center align-middle">
  <thead class="table-dark">
    <tr>
      <th scope="col" style="width: 25%;">Name</th>
      <th scope="col" style="width: 30%;">Email</th>
      <th scope="col" style="width: 13%;">Join Date</th>
      <th scope="col" style="width: 10%;">Status</th>
      <th scope="col" style="width: 17%;">Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% users = @users.select { |u| current_user.super_admin? || u.trader? } %>  

    <% if users.present? %>
      <% users.each do |user| %>
        <tr>
          <td>
            <%= "#{user.first_name} #{user.last_name}" %>
            <% if user.admin? %>
              <span class="badge bg-secondary ms-2">Admin</span>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td><%= user.confirmed_at&.strftime("%b %d, %Y") || "--" %></td>
          <td><%= user.status.titleize %></td>
          <td>
            <div class="d-flex justify-content-between text-center align-middle">
              <div class="d-flex gap-1">
                <% user.approved? %>
                  <%= link_to admin_portfolio_path(user), class: "btn btn-outline-success btn-sm" do %>
                    <i class="bi bi-graph-up-arrow"></i>
                  <% end %>
                <%= link_to admin_user_path(user), class: "btn btn-secondary btn-sm" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_admin_user_path(user), class: "btn btn-secondary btn-sm" do %>
                  <i class="bi bi-pencil-square"></i>
                <% end %>
                <%= button_to admin_user_path(user), method: :delete,
                  data: { turbo_confirm: "Are you sure you want to delete this user?" },
                  class: "btn btn-secondary btn-sm" do %>
                  <i class="bi bi-trash3"></i>
                <% end %>
              </div>
              <div>
                <% if user.pending? && user.confirmed_at != nil %>
                  <%= button_to 'Approve', approve_admin_user_path(user),
                    method: :patch,
                    data: { confirm: "Approve this user?" },
                    class: "btn btn-outline-success btn-sm" %>
                <% elsif user.pending? && user.confirmed_at.nil? %>
                  <%= button_to 'Confirm', confirm_admin_user_path(user),
                    method: :patch,
                    data: { confirm: "Confirm this user?" },
                    class: "btn btn-outline-primary btn-sm" %>
                <% elsif user.banned? %>
                    <%= button_to 'Activate', unban_admin_user_path(user),
                    method: :patch,
                    data: { confirm: "Re-activate this user account?" },
                    class: "btn btn-outline-danger btn-sm" %>
                <% elsif user.approved? %>
                    <%= button_to 'Ban', ban_admin_user_path(user),
                    method: :patch,
                    data: { confirm: "Ban this user?" },
                    class: "btn btn-outline-secondary btn-sm px-4" %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">No traders found.</td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center mt-3">
  <%= paginate @users %>
</div>
