<table class="table table-bordered border-secondary table-hover">
  <thead class="table-info">
    <tr>
      <th scope="col" style="width: 27%;">Name</th>
      <th scope="col" style="width: 30%;">Email</th>
      <th scope="col" style="width: 13%;">Join Date</th>
      <th scope="col" style="width: 13%;">Status</th>
      <th scope="col" style="width: 17%;">Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% if @approved_traders.present? %>
      <% @approved_traders.each do |trader| %>
        <tr>
          <td><%= "#{trader.first_name} #{trader.last_name}" %></td>
          <td><%= trader.email %></td>
          <td><%= trader.confirmed_at&.strftime("%b %d, %Y") %></td>
          <td>
            <%= trader.status.titleize %>
            <% if trader.current_sign_in_at && trader.current_sign_in_at > 1.minutes.ago %>
              <span class="badge bg-success ms-1">Online</span>
            <% else %>
              <span class="badge bg-secondary ms-1">Inactive</span>
            <% end %>
          </td>
          <td>
            <div class="d-flex align-items-center gap-1">
              <div>
                <%= button_to 'Ban', ban_admin_user_path(trader),
                    method: :patch,
                    data: { confirm: "Ban this user?" },
                    class: "btn btn-outline-danger btn-sm" %>
              </div>
              <div class="d-flex gap-1">
                <%= link_to admin_user_path(trader), class: "btn btn-secondary btn-sm" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_admin_user_path(trader), class: "btn btn-secondary btn-sm" do %>
                  <i class="bi bi-pencil-square"></i>
                <% end %>
                <%= button_to admin_user_path(trader), method: :delete,
                  data: { turbo_confirm: "Are you sure you want to delete this user?" },
                  class: "btn btn-secondary btn-sm" do %>
                  <i class="bi bi-trash3"></i>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">No traders found.</td>
      </tr>
    <% end %>
  </tbody>
</table>