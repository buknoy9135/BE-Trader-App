<div class="container-fluid my-4">
  <div class="mx-auto" style="max-width: 1200px;">

    <div class="d-flex justify-content-between align-items-center mb-5">
      <div>
        <h1 class="fw-bold mb-1">
          <i class="bi bi-graph-up-arrow me-2 text-success"></i>
          Welcome back, <span class="text-primary"><%= current_user.first_name %></span>!
        </h1>
        <p class="text-muted mb-0">
          Ready to trade? Check your portfolio or start a new transaction below.
        </p>
      </div>
    </div>

    <div class="card shadow-sm border rounded-4 p-4 mb-4">
      <div class="d-flex flex-wrap align-items-center justify-content-between text-center">

        <div class="me-4">
          <h5 class="mb-1 fw-semibold text-muted">Available Balance</h5>
          <div class="fs-4 text-success">
            <%= number_to_currency(current_user.balance, precision: current_user.balance == 0 ? 0 : 2) %>
          </div>
        </div>

        <div class="d-flex gap-5 flex-wrap">
          <%= link_to new_trader_fund_path(fund_type: "deposit"), class: "text-decoration-none text-dark text-center" do %>
            <div>
              <i class="bi bi-wallet2 fs-3"></i>
              <div class="small mt-1">Deposit</div>
            </div>
          <% end %>
          
          <%= link_to new_trader_fund_path(fund_type: "withdraw"), class: "text-decoration-none text-dark text-center" do %>
            <div>
              <i class="bi bi-cash-stack fs-3"></i>
              <div class="small mt-1">Withdraw</div>
            </div>
          <% end %>

          <%= link_to new_trader_transaction_path(transaction_type: 'buy'), class: "text-decoration-none text-dark text-center" do %>
            <div>
              <i class="bi bi-cart-plus fs-3"></i>
              <div class="small mt-1">Buy</div>
            </div>
          <% end %>

          <%= link_to new_trader_transaction_path(transaction_type: 'sell'), class: "text-decoration-none text-dark text-center" do %>
            <div>
              <i class="bi bi-cart-dash fs-3"></i>
              <div class="small mt-1">Sell</div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Portfolio %>
    <div class="card p-3 mb-4">
      <h5 class="mb-3">My Portfolio</h5>
      <div style="max-height: 300px; overflow-y: auto;" class="table-responsive">
        <table class="table table-sm table-striped table-hover mb-0 text-center align-middle">
          <thead class="table-dark">
            <tr>
              <th>Stock Symbol</th>
              <th>Quantity Owned</th>
              <th>Current Price</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="text-center align-middle">
            <% if @holdings.present? %>
              <% @holdings.each do |symbol, qty| %>
                <tr>
                  <td><%= symbol.upcase %></td>
                  <td><%= qty %></td>
                  <td>
                    <%= @prices[symbol].present? ? number_to_currency(@prices[symbol]) : "N/A" %>
                  </td>
                  <td>
                    <%= link_to "Sell", new_trader_transaction_path(transaction_type: 'sell', asset_symbol: symbol), class: "btn btn-outline-success btn-sm" %>
                    <%= link_to "Buy", new_trader_transaction_path(transaction_type: 'buy', asset_symbol: symbol), class: "btn btn-outline-danger btn-sm" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4">No holdings found.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Transactions %>
    <div class="card p-3 mb-4">
      <h5 class="mb-3">Recent Transactions (5)</h5>
      <div style="max-height: 300px; overflow-y: auto;" class="table-responsive">
        <table class="table table-sm table-bordered table-hover mb-0 text-center align-middle">
          <thead class="table-dark">
            <tr>
              <th>Stock</th>
              <th>Type</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Total</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @recent_transactions.present? %>
              <% @recent_transactions.each do |tx| %>
                <tr>
                  <td><%= tx.asset_symbol %></td>
                  <td>
                    <% if tx.transaction_type == "buy" %>
                      <span class="badge text-bg-success">Buy</span>
                    <% else %>
                      <span class="badge text-bg-danger">Sell</span>
                    <% end %>
                  </td>
                  <td><%= tx.quantity %></td>
                  <td><%= number_to_currency(tx.price) %></td>
                  <td>
                    <% sign = tx.buy? ? "-" : "+" %>
                    <span class="<%= tx.buy? ? 'text-danger' : 'text-success' %>">
                      <%= sign %><%= number_to_currency(tx.total_amount) %>
                    </span>
                  </td>
                  <td><%= tx.created_at.in_time_zone("Asia/Manila").strftime("%b %d, %Y") %></td>
                  <td>
                    <%= link_to 'View', trader_transaction_path(tx), class: "btn btn-outline-secondary btn-sm" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6">No transactions found.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="mb-5"></div>
  </div>
</div>
