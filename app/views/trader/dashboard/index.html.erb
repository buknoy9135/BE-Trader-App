<div class="container-fluid my-4">
  <div class="mx-auto" style="max-width: 1200px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="mb-0">Welcome to your Dashboard, <%= current_user.first_name %>!</h2>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
    </div>

    <div class="card p-3 mb-4">
      <h4>
        Available Balance:
        <span class="text-success">
          ₱<%= number_with_precision(current_user.balance, precision: current_user.balance == 0 ? 0 : 2) %>
        </span>
      </h4>

      <div class="mt-3 d-flex gap-2">
        <%= link_to "Deposit", "#", class: "btn btn-success" %>
        <%= link_to "Withdraw", "#", class: "btn btn-warning" %>
      </div>
    </div>

    <div class="card p-3 mb-4 shadow-sm rounded-3">
      <h5 class="mb-3 text-muted">Actions</h5>
      <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <%= link_to "Buy Stock", new_trader_transaction_path(transaction_type: 'buy'), class: "btn btn-outline-primary px-4" %>
        <%= link_to "Sell Stock", new_trader_transaction_path(transaction_type: 'sell'), class: "btn btn-outline-primary px-4" %>
      </div>
    </div>

    <hr class="my-4">

    <!-- Portfolio Section -->
    <div class="card p-3 mb-4">
      <h2 class="mb-3">My Portfolio</h2>
      <div style="max-height: 300px; overflow-y: auto;" class="table-responsive">
        <table class="table table-sm table-striped table-hover mb-0">
          <thead class="table-dark">
            <tr>
              <th>Stock Symbol</th>
              <th>Quantity Owned</th>
            </tr>
          </thead>
          <tbody>
            <% @holdings.each do |symbol, qty| %>
              <tr>
                <td><%= symbol %></td>
                <td><%= qty %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Transactions Section -->
    <div class="card p-3 mb-4">
      <h2 class="mb-3">Recent Transactions</h2>
      <div style="max-height: 300px; overflow-y: auto;" class="table-responsive">
        <table class="table table-sm table-bordered table-hover mb-0">
          <thead class="table-dark">
            <tr>
              <th>Stock</th>
              <th>Type</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Total</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_transactions.each do |tx| %>
              <tr>
                <td><%= tx.asset_symbol %></td>
                <td><%= tx.transaction_type.capitalize %></td>
                <td><%= tx.quantity %></td>
                <td>₱<%= number_with_precision(tx.price, precision: 2) %></td>
                <td>
                  <% sign = tx.buy? ? "-" : "+" %>
                  <span class="<%= tx.buy? ? 'text-danger' : 'text-success' %>">
                    <%= sign %>₱<%= number_with_precision(tx.total_amount, precision: 2) %>
                  </span>
                </td>
                <td><%= tx.created_at.strftime("%b %d, %Y %I:%M %p") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="mb-5"></div>

  </div>
</div>
